{
	"extends": "../../tsconfig.base.json",

	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"verbatimModuleSyntax": false,

		"rootDir": "./src",
		"outDir": "./dist",

		"declaration": true,
		"declarationDir": "./dist",
		"emitDeclarationOnly": false
	},

	"include": ["src/**/*.ts"],
	"exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
